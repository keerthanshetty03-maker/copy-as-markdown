{
  "manifest_version": 3,
  "name": "Copy as Markdown",
  "version": "0.1.0",
  "description": "Copy selected text from any webpage as clean Markdown.",
  "permissions": ["contextMenus", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
"icons": {
"16": "icon.png",
"48": "icon.png",
"128": "icon.png"
},
"content_scripts": [
  {
    "matches": ["http://*/*", "https://*/*"],
    "js": ["turndown.js", "content.js"],
    "run_at": "document_idle"
  }
]
}
