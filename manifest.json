{
  "manifest_version": 3,
  "name": "Copy as Markdown",
  "version": "0.1.0",
  "description": "Copy selected text from any webpage as clean Markdown.",
  "permissions": ["contextMenus", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "copy-as-markdown": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "Copy selected text as Markdown"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
